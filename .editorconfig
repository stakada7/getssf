root = true

[*]
end_of_line              = lf
charset                  = utf-8
trim_trailing_whitespace = true
insert_final_newline     = true

[*.php]
indent_style = space
indent_size  = 4

[*.js]
indent_style = space
indent_size  = 4

[*.css]
indent_style = space
indent_size  = 4

[*.htaccess]
indent_style = space
indent_size  = 4

[*.sh]
indent_style = space
indent_size  = 4

[*.sql]
indent_style = space
indent_size  = 4

[*.swift]
indent_style = space
indent_size  = 4

[*.go]
indent_style = tab
tab_witdh    = 4

[*.[ch]]
indent_style = space
indent_size  = 4

[CMakeLists.txt]
indent_style = space
indent_size  = 4

[*.ctp]
indent_style = space
indent_size  = 2

[*.py]
indent_style = space
indent_size  = 4

[Makefile]
indent_style = tab
indent_size = 4
